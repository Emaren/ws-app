// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  role      Role     @default(STONEHOLDER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  articles  Article[]
  comments  Comment[]
  reactions Reaction[]
}

enum Role {
  ADMIN
  CONTRIBUTOR
  STONEHOLDER
}

model Article {
  id          String        @id @default(cuid())
  slug        String        @unique
  title       String
  excerpt     String?
  coverUrl    String?
  content     String
  publishedAt DateTime?
  status      ArticleStatus @default(DRAFT)

  authorId String?
  author   User?   @relation(fields: [authorId], references: [id])

  likeCount Int @default(0)
  wowCount  Int @default(0)
  hmmCount  Int @default(0)

  // âœ… add these:
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  comments  Comment[]
  reactions Reaction[]
}

enum ArticleStatus {
  DRAFT
  PUBLISHED
}

model Comment {
  id        String  @id @default(cuid())
  articleId String
  article   Article @relation(fields: [articleId], references: [id])

  userId String?
  author User?   @relation(fields: [userId], references: [id])

  authorName String?
  body       String
  createdAt  DateTime @default(now())
}

model Reaction {
  id        String  @id @default(cuid())
  articleId String
  article   Article @relation(fields: [articleId], references: [id])

  userId String?
  user   User?   @relation(fields: [userId], references: [id])

  ipHash    String?
  type      ReactionType
  createdAt DateTime     @default(now())

  @@unique([articleId, userId, type])
}

enum ReactionType {
  LIKE
  WOW
  HMM
}
