{
  "name": "ws-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "//": "---- DEV (hot reload; isolated build dir) ----",
    "dev": "NEXT_DIST_DIR=.next-dev next dev --hostname 0.0.0.0 --port ${PORT:-3211}",
    "//2": "---- PROD (PM2 uses this; default 3011; default .next dir) ----",
    "start": "next start -H 127.0.0.1 -p ${PORT:-3011}",
    "//3": "---- PROD-PARITY / PREVIEW on localhost (isolated build dir) ----",
    "preview": "NEXT_DIST_DIR=.next-preview scripts/preview-prod.sh",
    "preview:fast": "NEXT_DIST_DIR=.next-preview NEXT_PUBLIC_SITE_ORIGIN=http://localhost:${PORT:-3111} NEXTAUTH_URL=http://localhost:${PORT:-3111} next build && next start -H 127.0.0.1 -p ${PORT:-3111}",
    "preview:build": "NEXT_DIST_DIR=.next-preview NEXT_PUBLIC_SITE_ORIGIN=http://localhost:${PORT:-3111} NEXTAUTH_URL=http://localhost:${PORT:-3111} next build",
    "preview:start": "NEXT_DIST_DIR=.next-preview next start -H 127.0.0.1 -p ${PORT:-3111}",
    "//4": "---- plain build (uses .env.production; default .next dir) ----",
    "prisma:generate:safe": "DATABASE_URL=${DATABASE_URL:-postgresql://postgres:postgres@127.0.0.1:5432/wheatandstone?schema=public} prisma generate",
    "pwa:icons": "node scripts/generate-pwa-icons.mjs",
    "typecheck": "pnpm prisma:generate:safe && tsc --noEmit",
    "lint": "pnpm run typecheck",
    "test": "node --test",
    "verify": "pnpm run lint && pnpm run test && pnpm run build",
    "ci:migrations": "scripts/ci-prisma-migrations.sh",
    "perf:mobile": "scripts/mobile-perf-check.sh",
    "build": "next build",
    "//5": "---- Prisma helpers ----",
    "prisma:generate": "prisma generate",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:seed": "node prisma/seed.mjs",
    "prisma:migrate:seed": "pnpm prisma:migrate:deploy && pnpm prisma:seed",
    "studio:dev": "prisma studio",
    "studio:prod": "prisma studio --hostname 127.0.0.1 --port 5556 --browser none",
    "prepare": "husky"
  },
  "dependencies": {
    "@prisma/client": "^6.18.0",
    "@tinymce/tinymce-react": "^6.3.0",
    "@tiptap/extension-blockquote": "^3.7.2",
    "@tiptap/extension-bullet-list": "^3.7.2",
    "@tiptap/extension-heading": "^3.7.2",
    "@tiptap/extension-history": "^3.7.2",
    "@tiptap/extension-horizontal-rule": "^3.7.2",
    "@tiptap/extension-image": "^3.7.2",
    "@tiptap/extension-link": "^3.7.2",
    "@tiptap/extension-list-item": "^3.7.2",
    "@tiptap/extension-ordered-list": "^3.7.2",
    "@tiptap/extension-table": "^3.7.2",
    "@tiptap/extension-table-cell": "^3.7.2",
    "@tiptap/extension-table-header": "^3.7.2",
    "@tiptap/extension-table-row": "^3.7.2",
    "@tiptap/extension-underline": "^3.7.2",
    "@tiptap/react": "^3.7.2",
    "@tiptap/starter-kit": "^3.7.2",
    "bcrypt": "^6.0.0",
    "dotenv": "^17.2.3",
    "isomorphic-dompurify": "^2.30.1",
    "next": "15.5.9",
    "next-auth": "^4.24.11",
    "prisma": "^6.18.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "sanitize-html": "^2.17.0",
    "stripe": "^19.1.0",
    "tinymce": "^8.2.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.15",
    "@tailwindcss/typography": "^0.5.19",
    "@types/bcrypt": "^6.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/sanitize-html": "^2.16.0",
    "autoprefixer": "^10.4.21",
    "husky": "^9.1.7",
    "postcss": "^8.5.6",
    "sharp": "^0.34.4",
    "tailwindcss": "^4.1.15",
    "typescript": "^5.9.3"
  }
}
